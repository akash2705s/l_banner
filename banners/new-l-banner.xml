<?xml version="1.0" encoding="UTF-8"?>
<VAST version="4.1">
  <Ad id="new-l-banner">
    <InLine>
      <AdSystem version="4.1">CanvasAdServer</AdSystem>
      <AdTitle>New L-Banner</AdTitle>
      <Impression><![CDATA[https://canvas-siau-server.vercel.app/api/track/impression]]></Impression>

      <Creatives>
        <Creative id="linear-new-l-banner" sequence="1">
          <Linear>
            <MediaFiles>
              <MediaFile
                delivery="progressive"
                type="video/mp4"
                width="1920"
                height="1080"
                bitrate="3500"><![CDATA[http://commondatastorage.googleapis.com/gtv-videos-bucket/sample/BigBuckBunny.mp4]]></MediaFile>
            </MediaFiles>
            <TrackingEvents>
              <Tracking event="start"><![CDATA[https://canvas-siau-server.vercel.app/api/track/video/start]]></Tracking>
              <Tracking event="firstQuartile"><![CDATA[https://canvas-siau-server.vercel.app/api/track/video/q1]]></Tracking>
              <Tracking event="midpoint"><![CDATA[https://canvas-siau-server.vercel.app/api/track/video/q2]]></Tracking>
              <Tracking event="thirdQuartile"><![CDATA[https://canvas-siau-server.vercel.app/api/track/video/q3]]></Tracking>
              <Tracking event="complete"><![CDATA[https://canvas-siau-server.vercel.app/api/track/video/complete]]></Tracking>
            </TrackingEvents>
            <VideoClicks>
              <ClickThrough><![CDATA[https://test.com]]></ClickThrough>
            </VideoClicks>
          </Linear>
        </Creative>
      </Creatives>

      <Extensions>
        <Extension type="l-banner">
          <LBanner>
            <!-- Horizontal segment (bottom side) -->
            <Horizontal>
              <ImageURL>
                <![CDATA[https://siau.s3.us-east-1.amazonaws.com/uploads/handwriting_sd2_example_3-1763282848316-77564206.png]]>
              </ImageURL>
              <Width>150</Width>
              <Height>120</Height>
              <X>40</X>
              <Y>760</Y>
              <Buttons>
                <Button id="segment2-btn" defaultFocus="true" role="primary">
                  <Label>Learn More</Label>
                  <Position>
                    <X>420</X>
                    <Y>780</Y>
                    <Width>180</Width>
                    <Height>60</Height>
                  </Position>
                  <Action type="clickthrough">
                    <ClickThrough>
                      <![CDATA[https://test.com]]>
                    </ClickThrough>
                    <DeepLink/>
                  </Action>
                  <TrackingEvents>
                    <Tracking event="click">
                      <![CDATA[https://canvas-siau-server.vercel.app/api/track/creativeClick/69198fa345e4bb80f6008925/segment2]]>
                    </Tracking>
                    <Tracking event="viewable">
                      <![CDATA[https://canvas-siau-server.vercel.app/api/track/creativeView/69198fa345e4bb80f6008925/segment2]]>
                    </Tracking>
                  </TrackingEvents>
                </Button>
              </Buttons>
            </Horizontal>
            <!-- Vertical segment (left side) -->
            <Vertical>
              <ImageURL>
                <![CDATA[https://siau.s3.us-east-1.amazonaws.com/uploads/file_example_MP4_640_3MG-1763282848313-340461885.mp4]]>
              </ImageURL>
              <Width>200</Width>
              <Height>300</Height>
              <X>40</X>
              <Y>260</Y>
              <Buttons>
                <Button id="segment1-btn" role="secondary">
                  <Label>Get Offer</Label>
                  <Position>
                    <X>60</X>
                    <Y>640</Y>
                    <Width>140</Width>
                    <Height>60</Height>
                  </Position>
                  <Action type="clickthrough">
                    <ClickThrough>
                      <![CDATA[https://google.com]]>
                    </ClickThrough>
                  </Action>
                  <TrackingEvents>
                    <Tracking event="click">
                      <![CDATA[https://canvas-siau-server.vercel.app/api/track/creativeClick/69198fa345e4bb80f6008925/segment1]]>
                    </Tracking>
                  </TrackingEvents>
                </Button>
              </Buttons>
            </Vertical>
            <!-- Display timing -->
            <Display>
              <StartOffset>00:00:30</StartOffset>
              <EndOffset>00:00:60</EndOffset>
            </Display>
          </LBanner>
        </Extension>
      </Extensions>
    </InLine>
  </Ad>
</VAST>

